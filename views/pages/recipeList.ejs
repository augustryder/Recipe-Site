
<%- include('../partials/header') %>

<section class="recipe-list">

    <h1>Recipe List</h1>

    <section class="filter-section">
        <label for="protein-filter">Filter:</label>
        <select id="protein-filter" name="protein">
            <option value="">All</option>
            <option value="Chicken">Chicken</option>
            <option value="Fish">Fish</option>
            <option value="Vegetarians">Vegetarian</option>
            </select>
    </section>

    <section class="recipe-table-section">
        <table class="recipe-table">
            <thead>
                <tr>
                    <th>Recipe Name</th>
                    <th>Protein Type</th>
                    <th>Time</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% recipes.forEach(recipe => { %>
                    <tr>
                        <td><a href="/recipe/:<%= recipe.recipe_id %>"><%= recipe.recipe_name %></a></td>
                        <td><%= recipe.protein_type %></td>
                        <td><%= recipe.time_required %></td>
                        <td><%= recipe.overview %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>

</section>

<%- include('../partials/footer') %>
