
<%- include('../partials/header') %>

<section class="add-recipe">

    <h1>Add Recipe</h1>

    <form action="/add-recipe" method="POST" enctype="application/x-www-form-urlencoded">

        <div>
            <label for="name">Recipe Name:</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div>
            <label for="proteinType">Protein Type:</label>
            <select id="proteinType" name="proteinType" required>
                <option value="Chicken">Chicken</option>
                <option value="Fish">Fish</option>
                <option value="Vegetarian">Vegetarian</option>
            </select>
        </div>

        <div>
            <label for="time">Time Required:</label>
            <input type="number" id="time" name="time" required>
        </div>

        <div>
            <label for="overview">Overview:</label>
            <textarea id="overview" name="overview" required></textarea>
        </div>

        <div>
            <label>Ingredients:</label>
            <% ingredients.forEach(ingredient => { %>
                <div>
                    <input type="checkbox" id="ingredient-<%= ingredient.ingredient_id %>" name="ingredients" value="<%= ingredient.ingredient_id %>">
                    <label for="ingredient-<%= ingredient.ingredient_id %>"><%= ingredient.ingredient_name %></label>
                </div>
            <% }); %>
        </div>

        <div>
            <label for="instructions">Instructions:</label>
            <textarea id="instructions" name="instructions" required></textarea>
        </div>

        <div>
            <button type="submit">Add Recipe</button>
        </div>

    </form>
</section>

<%- include('../partials/footer') %>
